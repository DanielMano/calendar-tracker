<HeaderIconButton@MDIconButton>:
    icon_size: "26sp"
    theme_icon_color: "Custom"
    icon_color: "white"
    pos_hint: {"center_x": .5, "center_y": .5}

<ScreenManager>:
<CalendarScreen>:
    name: ''
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.theme_cls.bg_normal
        MDBoxLayout:
            id: header_layout
            size_hint_y: .1
            HeaderIconButton:
                id: left_btn
                icon: "chevron-left"
                on_release: root.prev_month()
            Label:
                id: header_label
                text: ''
            HeaderIconButton:
                id: right_btn
                icon: "chevron-right"
                on_release: root.next_month()
        MDBoxLayout:
            id: day_labels
            size_hint_y: .05
            orientation: 'horizontal'
            Label:
                text: "SUN"
            Label:
                text: "MON"
            Label:
                text: "TUE"
            Label:
                text: "WED"
            Label:
                text: "THU"
            Label:
                text: "FRI"
            Label:
                text: "SAT"
        GridLayout:
            id: day_grid
            size_hint_y: 1
            cols: 7
        BoxLayout:
            id: lower_layout
            orientation: 'vertical'
            size_hint_y: .75
    MDFloatingActionButton:
        id: update_fab
        icon: 'plus'
        type: 'small'
        pos_hint: {"center_x": 0.92, "center_y": 0.04}

<DayPopupLayout>:
    orientation: 'vertical'
    Label:
        id: y_m
    Label:
        id: day
    Button:
        id: dismiss
        text: "Return"
<DayTile>:
    orientation: 'vertical'
    Button:
        pos: root.pos
        size: root.size
        id: day
        text: "temp"
        text_size: None, root.height * .6
        valign: 'top'
        font_size: 25
    GridLayout:
        id: event_grid
        pos: root.pos
        size: root.width, root.height * .5
        cols: 6
        col_default_width: root.width / 7
        padding: 5
<DayIcon>:
    canvas:
        Color:
            rgba: root.event_color
        Ellipse:
            size: root.width * .7 , root.width * .7
            pos: self.pos[0] + self.width * .15, self.pos[1] + self.width * .15
