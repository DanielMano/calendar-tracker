<ScreenManager>:
<CalendarScreen>:
    name: ''
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: header_layout
            size_hint_y: .2
            Button:
                id: left_btn
                text: 'Left Screen'
                on_press: root.prev_month()
            Label:
                id: header_label
                text: ''
            Button:
                id: right_btn
                text: 'Right Screen'
                on_press: root.next_month()
        BoxLayout:
            id: day_labels
            size_hint_y: .1
            orientation: 'horizontal'
            Label:
                text: "SUNDAY"
            Label:
                text: "MONDAY"
            Label:
                text: "TUESDAY"
            Label:
                text: "WEDNESDAY"
            Label:
                text: "THURSDAY"
            Label:
                text: "FRIDAY"
            Label:
                text: "SATURDAY"
        GridLayout:
            id: day_grid
            cols: 7
<DayPopupLayout>:
    orientation: 'vertical'
    Label:
        id: y_m
    Label:
        id: day
    Button:
        id: dismiss
        text: "Return"
<DayTile>:
    orientation: 'vertical'
    Button:
        pos: root.pos
        size: root.size
        id: day
        text: "temp"
        text_size: None, root.height * .6
        valign: 'top'
        font_size: 25
    GridLayout:
        id: event_grid
        pos: root.pos
        size: root.width, root.height * .5
        cols: 6
        col_default_width: root.width / 7
        padding: 5
<DayIcon>:
    canvas:
        Color:
            rgba: root.event_color
        Ellipse:
            size: root.width * .7 , root.width * .7
            pos: self.pos[0] + self.width * .15, self.pos[1] + self.width * .15
